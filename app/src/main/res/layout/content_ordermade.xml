<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView4"
        android:src="@mipmap/ic_ordermade_success"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thank you, your order has been placed!"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textColor="#4CAF50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We will notify you if nearby farm has accepted your order"
        android:id="@+id/textView6"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#4CAF50" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createorder"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_ordermade_leftarrow"
        android:src="@drawable/ic_ordermade_left"
        android:layout_alignTop="@+id/view_all_order"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:text="CREATE ORDER"
        android:paddingRight="8dp"
        android:paddingLeft="3dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_all_order"
        android:background="@drawable/round_button"
        android:drawableRight="@drawable/ic_ordermade_rightarrow"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="40dp"
        android:text="STATUS ORDER"
        android:paddingLeft="8dp"
        android:paddingRight="3dp"
        android:textColor="#FFFFFF" />

