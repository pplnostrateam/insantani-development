<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/colorPrimary">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="85dp"
            android:id="@+id/data_section">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ABC FARM"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="32dp"
                android:id="@+id/farm_name"
                android:layout_gravity="center_horizontal|top"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="080989999"
                android:id="@+id/farm_phone_number"
                android:layout_below="@+id/farm_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="#212121" />

            <GridLayout
                android:layout_width="match_parent"
                android:id="@+id/data_container"
                android:layout_height="match_parent"
                android:layout_below="@+id/farm_phone_number"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="186dp"
                    android:layout_height="125dp"
                    android:layout_row="0"
                    android:layout_column="3" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ORDER ID"
                        android:id="@+id/textView7"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ITEM"
                        android:id="@+id/textView11"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="QUANTITY"
                        android:id="@+id/textView13"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="TOTAL PRICE"
                        android:id="@+id/textView15"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="186dp"
                    android:layout_height="125dp"
                    android:layout_row="0"
                    android:layout_column="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1234567890"
                        android:id="@+id/order_id"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="VEGETABLE NAME"
                        android:id="@+id/item_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="X KG"
                        android:id="@+id/item_quantity"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="IDR 123.000"
                        android:id="@+id/total_price"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="#212121" />

                </LinearLayout>
            </GridLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/status_section">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/return_home"
                android:background="@color/buttonOrange"
                android:drawableLeft="@drawable/ic_ordermade_leftarrow"
                android:src="@drawable/ic_ordermade_left"
                android:text="RETURN HOME"
                android:paddingRight="8dp"
                android:paddingLeft="3dp"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="38dp"
                android:layout_marginLeft="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_all_order"
                android:background="@color/buttonOrange"
                android:drawableRight="@drawable/ic_ordermade_rightarrow"
                android:text="SEE MY ORDER"
                android:paddingLeft="8dp"
                android:paddingRight="3dp"
                android:textColor="#FFFFFF"
                android:layout_alignTop="@+id/return_home"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="32dp" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
