<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/order_layout">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logo"
        android:cropToPadding="false"
        android:src="@drawable/ic_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOUR LOCATION"
        android:id="@+id/title_location"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="28dp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_location_geomap"
        android:layout_below="@+id/title_location"
        android:layout_alignLeft="@+id/title_location"
        android:layout_alignStart="@+id/title_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DETAILS"
        android:id="@+id/title_details"
        android:textSize="28dp"
        android:layout_below="@+id/user_location_geomap"
        android:layout_alignLeft="@+id/user_location_geomap"
        android:layout_alignStart="@+id/user_location_geomap"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_location_detail_1"
        android:layout_below="@+id/title_details"
        android:layout_alignLeft="@+id/title_details"
        android:layout_alignStart="@+id/title_details" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_location_detail_2"
        android:layout_below="@+id/user_location_detail_1"
        android:layout_alignLeft="@+id/user_location_detail_1"
        android:layout_alignStart="@+id/user_location_detail_1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/button2"
        android:background="@color/buttonOrange"
        android:textSize="@dimen/button_font_size"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/user_location_detail_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
