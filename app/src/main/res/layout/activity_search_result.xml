<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:id="@+id/search_vegetable"
        android:background="#DCDCDC"
        android:paddingLeft="10dp"
        android:layout_below="@+id/logoname"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorInput" />
    <Button
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:text="SEARCH"
        android:id="@+id/button"
        android:onClick="getData"
        android:background="@color/buttonOrange"
        android:drawableLeft="@drawable/ic_search_dark_48dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_alignTop="@+id/search_vegetable"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cart"
        android:id="@+id/textView4"
        android:layout_below="@+id/search_vegetable"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/titleColor"
        android:textSize="42dp" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchResult"
        android:layout_below="@+id/textView4"
        android:layout_above="@+id/bottom"
        android:padding="16dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#333333"

        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonOrange"
            android:text="continue"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:id="@+id/button2"
            android:onClick="getConfirmation"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/weight"
            android:background="#DCDCDC"
            android:singleLine="true"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kg:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textKg"
            android:paddingLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/weight"
            android:layout_alignEnd="@+id/weight"
            android:layout_alignBottom="@+id/weight" />


    </RelativeLayout>

</RelativeLayout>

