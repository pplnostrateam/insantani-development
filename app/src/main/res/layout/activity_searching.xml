<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="insantani"
            android:id="@+id/logoname"
            android:textSize="50dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/search_vegetable"
            android:background="@color/colorWhite"
            android:hint="Type the vegetable&apos;s name..."
            android:paddingLeft="10dp"
            android:layout_below="@+id/logoname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorInput" />

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="SEARCH"
            android:id="@+id/button"
            android:onClick="getData"
            android:layout_marginTop="20dp"
            android:background="@color/buttonOrange"
            android:drawableLeft="@drawable/ic_search_dark_48dp"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_below="@+id/search_vegetable"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView2"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>
</LinearLayout>
